<main class ="devise">
    <h2>Regístrate</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div>
        <%= if resource.avatar.attached?%>
        <%= image_tag(resource.avatar)%>
        <%= else %>
        <%= image_tag("/defauls_profile.jpg") %>
        <%= end %>
    </div>
    <div>
         <%= f.email_field :email, autofocus: true, class:"input", autocomplete: "email", placeholder: "Correo electronico"%>
    </div>

    <div>
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, class:"input", autocomplete: "new-password", placeholder: "Contraseña (mínimo 6 carácteres)" %>
    </div>

    <div>
        <%= f.password_field :password_confirmation, class:"input", autocomplete: "new-password", placeholder: "Confirmar contraseña" %>
    </div>

    <div class="actions">
        <%= f.submit "Regístrar", class:"buttom" %>
    </div>
    <% end %>

    <div class="prueba">
        <%= render "devise/shared/links" %>
    </div>
</main>

<footer class= "footer"> 
        <p>Version 1.2</p>
</footer>







